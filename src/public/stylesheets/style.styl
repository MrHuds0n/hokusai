@import url('https://fonts.googleapis.com/css?family=Satisfy|Roboto');

header-font = "Satisfy"
body-font = "Roboto"

*, *:before, *:after
  margin 0
  padding 0
  box-sizing border-box
  font-family body-font

body
  height 100vh
  width 100vw

  display flex

  @media only screen and (max-width: 800px)
    flex-direction column

  @media only screen and (min-width: 800px)
    flex-direction row

h1
  font-family header-font
  font-size 3em

input[type=text]
  font-size 1em
  padding .5em
  max-width 10em
  text-align center

.logo-container
  display flex
  flex-direction column
  align-items center

.column
  height 100%
  width 100%
  padding .5em

  display flex
  flex-direction column
  align-items center
  justify-content center

.decklist
  position relative

.similarities, .differences
  width 100%
  position relative

.similarities
  color green
.differences
  color red

.card-container
  width 100%
  z-index 5

  h3
    cursor pointer

  &:hover
    .card-container-hidden
      display block

  .card-container-hidden
    position absolute
    display none
    color black
    width 50%
    right 0
    top 0
    background white

    blockquote
      padding-left .5em
      border-left .2em black solid

      &.anarch
        border-left-color orangered
      &.criminal
        border-left-color royalblue
      &.shaper
        border-left-color limegreen
      &.hb
        border-left-color blueviolet
      &.jinteki
        border-left-color crimson
      &.nbn
        border-left-color darkorange
      &.weyland
        border-left-color darkgreen


//Eyecandy
#svgcircle, #svgpath
  transition stroke .7s ease-in-out

#logo
  transition transform 0s ease-in-out,
             height .7s ease-in-out,
             width .7s ease-in-out
  cursor pointer

  &:hover
    transform rotate(360deg)
    transition transform .7s ease-in-out

//Ordering
@media only screen and (min-width: 800px)
  #panel
    order 2
  #decklist1
    order 1
  #decklist2
    order 3
